<Page x:Class="PriutForAnimlApp.Views.Pages.ServicPageEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PriutForAnimal.Entities;assembly=PriutForAnimalLib"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Services (View Only)">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assets/Styles/Controls/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Стиль для текстовых блоков в режиме просмотра -->
            <Style x:Key="ViewModeTextBlock" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,0,10,10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <Style x:Key="ViewModeTextBox" TargetType="TextBox">
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <!-- Стиль для невидимых кнопок с изображениями -->
            <Style x:Key="InvisibleImageButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Правая часть с контентом -->
        <Grid Grid.Column="1" Margin="20">
            <Grid Width="600" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

               

                <!-- Поле с данными о сервисе -->
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="5" 
                        Padding="15" 
                        BorderBrush="Gray" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Название услуги -->
                        <TextBlock Text="Сервис:" 
                                   Grid.Row="0" Grid.Column="0" 
                                   Margin="0,0,10,10"
                                   FontWeight="SemiBold"
                                   Foreground="Black"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding ServiceName}"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"
                                 Background="White"
                                 Padding="2"/>

                        <!-- Описание -->
                        <TextBlock Text="Описание:" 
                                   Grid.Row="1" Grid.Column="0" 
                                   Margin="0,0,10,10"
                                   FontWeight="SemiBold"
                                   Foreground="Black"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding Description}" 
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"
                                 Background="White"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="80"
                                 Padding="2"/>

                        <!-- Цена -->
                        <TextBlock Text="Цена:" 
                                   Grid.Row="2" Grid.Column="0" 
                                   Margin="0,0,10,10"
                                   FontWeight="SemiBold"
                                   Foreground="Black"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding Price, StringFormat=C}"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"
                                 Background="White"
                                 Padding="2"/>

                        <!-- ID услуги -->
                        <TextBlock Text="Сервис ID:" 
                                   Grid.Row="3" Grid.Column="0" 
                                   Margin="0,0,10,10"
                                   FontWeight="SemiBold"
                                   Foreground="Black"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding ServiceId}"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"
                                 BorderBrush="LightGray"
                                 BorderThickness="1"
                                 Background="White"
                                 Padding="2"/>

                        <!-- Блок с кнопками -->
                        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,20,0,0"
                                    VerticalAlignment="Bottom">

                            <!-- Левая кнопка "назад" -->
                            <Button Width="40" 
                                    Height="40"
                                    Margin="5"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    ToolTip="назад">
                                <Image Source="/Assets/Images/Icons/icons8-стрелка-50.png" 
                                       Width="32" 
                                       Height="32"/>
                            </Button>

                            <!-- Правая кнопка "вперёд" -->
                            <Button Width="40" 
                                    Height="40"
                                    Margin="5"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    ToolTip="вперёд">
                                <Image Source="/Assets/Images/Icons/icons8-стрелка-51.png" 
                                       Width="32" 
                                       Height="32"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>